{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}

  <section class="section-account">
    <div class="account-container form-wrap shake">
      <div class="form-header">
        <h1 class="heading-primary">Changer mon mot de passe</h1>
      </div>
      {# Formulaire de modification du mot de passe #}
      <div class="form-row">
        <p class="form-info-text">Utilisez le formulaire pour modifier le mot de passe de votre compte ...</p>
        {{form_start(formView)}}
      </div>
        <div class="form-row">
          <p class="subheading">Mes informations : </p>
          {{form_row(formView.email)}}
        </div>
        <div class="form-row">
          <p class="subheading">Modifier mon mot de passe : </p>
          {{form_row(formView.old_password)}}
          {{form_row(formView.new_password)}}
        </div>
        <div class="form-footer">
          <button class="btn btn--form" type="submit">Modifier</button>
          {{form_end(formView)}}
        </div>
        {# Lien vers la route de la page d'accueil du compte de l'utilisateur #}
        <div class="form-footer">
          <div class="account-nav">
            <ul class="nav-list">
                {# Formulaire de login #}
                <li class="item-list">
                    <ion-icon class="icon icon-secondary" name="person-outline"></ion-icon>
                    <span>
                        <a href="{{path('app_account')}}">Retour vers mon compte</a>
                    </span>
                </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
{% endblock %}