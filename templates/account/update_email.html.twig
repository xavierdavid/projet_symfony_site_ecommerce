{% extends 'base.html.twig' %}

{% block title %}Modification de l'email{% endblock %}

{% block body %}

  <section class="section-account">
    <div class="account-container form-wrap shake">
      <div class="form-header">
        <h1 class="account-title heading-primary">Modifier votre email</h1>
      </div>
      {# Formulaire de demande de modification de l'email #}
      <div class="form-row">
        <p class="form-info-text">Adresse email actuelle : <strong>{{user.email}}</strong></p>
        <p class="form-info-text">Saisissez la nouvelle adresse email que vous souhaitez associer à votre compte ci-dessous. Nous vous enverrons un lien de vérification à cette adresse pour l'activer.</p>
        {{form_start(formView)}}
        {{form_row(formView.new_email)}}
      </div>
      <div class="form-footer">
        <button class="btn btn--form" type="submit">Modifier</button>
        {{form_end(formView)}}
      </div>
      {# Lien vers la route de la page d'accueil du compte de l'utilisateur #}
      <div class="form-footer">
        <div class="account-nav">
          <ul class="nav-list">
              {# Formulaire de login #}
              <li class="item-list">
                  <ion-icon class="icon icon-secondary" name="person-outline"></ion-icon>
                  <span>
                      <a href="{{path('app_account')}}">Retour vers mon compte</a>
                  </span>
              </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

{% endblock %}